<% include ../partials/header %>

<header class="container">
    <div class="jumbotron text-center">
        <h1>Welcome to the YelpCamp Page</h1>
        <p>View our nice Campground from all over world</p>
        <p><a href="/campground/new" class="btn btn-danger btn-lg">Add New Campground</a></p>
    </div>
</header>

<div class="container">
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campground.forEach(function(camp){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail"> 
                <img src="<%= camp.image %>" >
            
            <div class="caption">
                 <h4> <%= camp.name %> </h4>
            </div>
                <p>
                    <a href="/campground/<%= camp._id %> " class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }) %>
    </div>
</div>


<br><br><hr>
<a href="/">Back To Home</a>

<% include ../partials/footer %>